<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/primary_pink" /> <!-- Shadow color -->
        </shape>
    </item>
    <!-- Button background -->
    <item android:top="4dp" android:right="4dp" android:left="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/white" /> <!-- Button background color -->
        </shape>
    </item>
</layer-list>
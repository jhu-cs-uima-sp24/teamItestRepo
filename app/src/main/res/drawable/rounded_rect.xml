<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#40000000" /> <!-- Shadow color -->
        </shape>
    </item>
    <!-- Button background -->
    <item android:top="0dp" android:right="0dp" android:left="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/primary_pink" /> <!-- Button background color -->
        </shape>
    </item>
</layer-list>
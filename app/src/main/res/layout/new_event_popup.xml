<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/gamingButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Break"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/studyButton"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableStart="@drawable/ic_home_black_24dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/task_pink"/>

    <Button
        android:id="@+id/studyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Study"
        app:layout_constraintStart_toEndOf="@+id/breakButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableStart="@drawable/ic_home_black_24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/task_green"/>

    <Button
        android:id="@+id/breakButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gaming"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/workOutButton"
        app:layout_constraintTop_toBottomOf="@+id/gamingButton"
        android:drawableStart="@drawable/ic_home_black_24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/task_blue"/>

    <Button
        android:id="@+id/workOutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/task_yellow"
        android:drawableStart="@drawable/ic_home_black_24dp"
        android:text="Workout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/breakButton"
        app:layout_constraintTop_toBottomOf="@+id/studyButton" />

</androidx.constraintlayout.widget.ConstraintLayout>